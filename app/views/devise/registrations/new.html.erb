<section class='flex flex-col justify-start gap-1 items-center h-full bg-zinc-100'>
<h2 class='text-white text-xl font-bold p-4 bg-blue-800 w-full text-center'>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


   <div class="field flex flex-col">
    <%= f.label :name , class: 'text-base text-blue-400 font-bold' %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'p-1 border-2 border-blue-300 rounded-md' %>
  </div>

  <div class="field flex flex-col">
    <%= f.label :email, class: 'text-base text-blue-400 font-bold' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'p-1 border-2 border-blue-300 rounded-md' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'text-base text-blue-400 font-bold' %>
    <% if @minimum_password_length %>
    <em class='text-blue-400'>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'p-1 border-2 border-blue-300 rounded-md' %>
  </div>

  <div class="field flex flex-col">
    <%= f.label :password_confirmation, class: 'text-base text-blue-400 font-bold' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'p-1 border-2 border-blue-300 rounded-md' %>
  </div>

  <div class="actions self-center">
    <%= f.submit "Sign up", class: 'text-slate-50 font-bold border bg-blue-400 rounded-md py-1 px-5' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
