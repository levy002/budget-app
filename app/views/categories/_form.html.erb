<%= form_with(:class => "flex flex-col gap-4", model: category) do |form| %>
  <div class='flex flex-col'>
    <%= form.label :name, class: 'text-base text-blue-400 font-bold' %>
    <%= form.text_field :name, class: 'p-1 border-2 border-blue-300 rounded-md' %>
  </div>

  <div class='flex flex-col'>
    <%= form.label :icon, class: 'text-base text-blue-400 font-bold' %>
    <%= form.text_field :icon, class: 'p-1 border-2 border-blue-300 rounded-md' %>
  </div>

  <div class='self-center'>
    <%= form.submit :Save, class: 'text-slate-50 font-bold border bg-blue-400 rounded-md py-1 px-5' %>
  </div>
<% end %>
