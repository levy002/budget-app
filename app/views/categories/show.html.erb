<section class='flex flex-col justify-between items-between h-full bg-zinc-200'>
<div class='flex flex-col gap-5'>
<h3 class='text-2xl font-bold text-white self-center p-3 pb-6 bg-blue-800 w-full text-center'>Transactions</h3>
    <div class='flex items-center flex-col gap-2'>
      <h2 class='text-3xl font-bold text-blue-500'>
        <%= @category.name %>
      </h2>
      <div class='flex justify-between gap-4'>
      <p class='font-bold'> Total Amount: $
      <%=@category.transactions.sum(:amount) %>
      </p>
      <%= button_to "Delete", @category, method: :delete, :class => "font-bold rounded-md p-1 bg-red-500 text-slate-50" %>
    </div>
    </div>
    <% if @transactions.exists? %>
      <div class='flex flex-col gap-2'>
        <% @transactions.each do |transaction| %>
        <div class='bg-slate-50 p-2 mx-2 rounded-md'> 
            <%= render transaction %>
          </div>
        <% end %>
      </div>
    <% else %>  
       <%= image_tag "tranzkt_transparent.png" %>
    <% end %>
</div>
<div class='w-full bg-lime-500 p-3 flex justify-center'>
<%= link_to "Add Transaction", new_category_transaction_path(@category), :class => "rounded-md border border-slate-50 text-xl text-white text-center bg-lime-500 w-3/4 p-1" %>
</div>
</section>