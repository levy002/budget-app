
<section class='flex flex-col justify-between items-between h-full bg-blue-100 pt-3'>  
    <% if @categories.exists? %>
      <div class='flex flex-col gap-4'>
      <h1 class='text-2xl font-bold text-blue-600 self-center mb-2'>Categories</h1>
        <% @categories.each do |category| %>
          <div class='flex justify-between items-center bg-slate-50 p-2 mx-2 rounded-md'>
            <%= render category %>
            <%= button_to "Delete", category_path(category), method: :delete, :class => "font-bold rounded-md p-1 bg-red-500 text-slate-50" %>
          </div>
        <% end %> 
      </div>
    <% else %> 
      <p></p>
       <%= image_tag "tranzkt_transparent.png", :class => "" %>
    <% end %> 
    <div class='w-full bg-blue-400 p-3 flex justify-center'>
      <%= link_to "Add Category", new_category_path, :class => "font-bold rounded-md border-2 border-slate-50 text-2xl text-white text-center bg-blue-400 w-3/4 p-1" %>
    </div>
</section>